<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hci">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_hci25"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_hci25_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HCI"
        android:usesCleartextTraffic="true">
        <activity android:name=".ChattingActivity"></activity>
        <activity android:name=".EditgroupActivity" />
        <activity
            android:name=".EditprofileActivity"
            android:exported="false"
            android:label="@string/title_activity_editprofile"
            android:theme="@style/Theme.HCI.NoActionBar" />
        <activity
            android:name=".MyfriendActivity"
            android:exported="false"
            android:label="@string/title_activity_myfriend2"
            android:theme="@style/Theme.HCI.NoActionBar" />
        <activity
            android:name=".ChatActivity"
            android:exported="false" />
        <activity
            android:name=".MakegroupActivity"
            android:label="@string/title_activity_makegroup"
            android:theme="@style/Theme.HCI.NoActionBar" />
        <activity
            android:name=".SetlocationActivity"
            android:label="@string/title_activity_setlocation"
            android:theme="@style/Theme.HCI.NoActionBar" />
        <activity
            android:name=".RegesterActivity"
            android:label="@string/title_activity_regester"
            android:theme="@style/Theme.HCI.NoActionBar" />
        <activity
            android:name=".SearchIDPW"
            android:label="@string/title_activity_search_i_d_p_w"
            android:theme="@style/Theme.HCI.NoActionBar" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.HCI.NoActionBar" />
        <activity
            android:name=".BookMarkActivity"
            android:label="@string/title_activity_book_mark"
            android:theme="@style/Theme.HCI.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Alarm.AlarmActivity"
            android:label="@string/title_activity_alarm"
            android:theme="@style/Theme.HCI.NoActionBar" />
        <activity
            android:name=".SelectCategory"
            android:label="@string/title_activity_select_category"
            android:theme="@style/Theme.HCI.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>